{
  "name": "basestyles",
  "version": "1.0.0",
  "description": "Better default styles for modern browsers",
  "main": "index.js",
  "scripts": {
    "serve": "node server.js",
    "watch": "sass --watch src/basestyles.scss dist/basestyles.min.css --style compressed",
    "build": "sass src/basestyles.scss dist/basestyles.min.css --style compressed && sass src/basestyles.scss dist/basestyles.css",
    "lint:styles": "npx stylelint \"src/*.scss\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milanidavide/basestyles.git"
  },
  "author": "Milani Davide",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milanidavide/basestyles/issues"
  },
  "homepage": "https://github.com/milanidavide/basestyles#readme",
  "devDependencies": {
    "express": "^4.17.1",
    "sass": "^1.26.8",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
